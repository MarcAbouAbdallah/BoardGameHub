package ca.mcgill.ecse321.boardgamehub.model;

import jakarta.persistence.*;
import java.time.LocalDateTime;

@Entity
public class BorrowRequest {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @ManyToOne
    private GameOwner owner;

    @ManyToOne
    private Player requester;

    @ManyToOne
    private Game game;

    @Enumerated(EnumType.STRING)
    private Status status;

    private LocalDateTime requestDate;

    public enum Status {
        PENDING, APPROVED, REJECTED
    }

    // Constructor
    public BorrowRequest() {
        this.requestDate = LocalDateTime.now();
        this.status = Status.PENDING;
    }

    // Getters
    public Long getId() { return id; }

    public GameOwner getOwner() { return owner; }

    public Player getRequester() { return requester; }

    public Game getGame() { return game; }

    public Status getStatus() { return status; }

    public LocalDateTime getRequestDate() { return requestDate; }

    // Setters
    public void setOwner(GameOwner owner) { this.owner = owner; }

    public void setRequester(Player requester) { this.requester = requester; }

    public void setGame(Game game) { this.game = game; }

    public void setStatus(Status status) { this.status = status; }
}
